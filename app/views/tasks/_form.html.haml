= form_for @task, html: { class: "form form-horizontal task" } do |f|
  .form-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'form-control', required: true
    = error_span(@task[:name])
  .form-group
    = f.label :deadline, class: 'control-label'
    .controls
      = f.text_field :deadline, class: 'form-control'
    = error_span(@task[:deadline])
  .form-group
    = f.label :done, class: 'control-label'
    .controls
      = f.check_box :done, class: 'form-control'
    = error_span(@task[:done])
  .form-group
    = f.label :project_id, class: 'control-label'
    .controls
      = f.collection_select :project_id, Project.all, :id, :name, {:include_blank => "No value", :required => true }
    = error_span(@task[:project_id])
  .form-group
    = f.label :time_needed, class: 'control-label'
    .controls
      = f.text_field :time_needed, class: 'form-control'
    = error_span(@task[:time_needed])
  .form-group
    = f.label :context_id, class: 'control-label'
    .controls
      = f.collection_select :context_id, ::Context.all, :id, :name, {:include_blank => "No value"}
    = error_span(@task[:context_id])

  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), tasks_path, :class => 'btn btn-default'
