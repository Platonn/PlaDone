- model_class = Task
.page-header
  %h1
    = @task.name
%p
  %strong= model_class.human_attribute_name(:deadline) + ':'
  %br
  = @task.deadline.datetime_without_seconds if @task.deadline
%p
  %strong= model_class.human_attribute_name(:project) + ':'
  %br
  = link_to(@task.project.name, project_path(@task.project)) if @task.project.nil? == false
%p
  %strong= model_class.human_attribute_name(:time_needed) + ':'
  %br
  = @task.time_needed
%p
  %strong= model_class.human_attribute_name(:done) + ':'
  %br
  = @task.done
%p
  %strong= model_class.human_attribute_name(:postponed_to) + ':'
  %br
  = @task.postponed_to.datetime_without_seconds if @task.postponed_to
%p
  %strong= model_class.human_attribute_name(:context) + ':'
  %br
  = link_to(@task.context.name, context_path(@task.context)) if @task.context.nil? == false
%p
  %strong= model_class.human_attribute_name(:created_at) + ':'
  %br
  = @task.created_at.datetime_without_seconds

= link_to t('.back', :default => t("helpers.links.back")), tasks_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(@task), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(@task), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
